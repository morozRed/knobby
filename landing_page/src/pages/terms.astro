<style>
  main {
    min-height: 100dvh;
    padding: 4rem 2rem;
    max-width: 640px;
    margin: 0 auto;
  }

  .back {
    font-family: 'Fraunces', Georgia, serif;
    font-size: 1.125rem;
    font-weight: 500;
    color: var(--text);
    display: inline-block;
    margin-bottom: 3rem;
  }

  h1 {
    font-family: 'Fraunces', Georgia, serif;
    font-size: 1.75rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
  }

  .updated {
    color: var(--text-muted);
    font-size: 0.875rem;
    margin-bottom: 3rem;
  }

  section {
    margin-bottom: 2rem;
  }

  h2 {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-muted);
    margin-bottom: 0.5rem;
  }

  p {
    color: var(--text);
  }

  section a {
    color: var(--accent);
  }

  .address {
    color: var(--text-muted);
    font-size: 0.875rem;
    margin-top: 0.25rem;
  }
</style>
